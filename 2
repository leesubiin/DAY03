#include <Windows.h>
#include <stdio.h>
//출력 , 변수 , 연산자(4) , 입력 , 조건문 , 반복문 , 배열
//연산자 (operator)
// 1. 산술연산자(5) ==>  + - * / % 
// 2. 대입연산자(1) ==>  a = 10  ==> 10 을 a 에 저장(복사)한다. 
// 3. 비교연산자(6) ==>  결과가 1 , 0 이나온다. 1은 참 , 0 은 거짓을 뜻한다.
//      1)   같다        10 == 10
//      2)   다르다      10 != 3
//      3)   크다        10 >  3
//      4)   작다        10 <  23
//      5)   크거나같다   10 >= 10
//      6)   작거나같다   10 <= 40
void main(){
	printf("%d" , 1 == 10); printf("\n");
	printf("%d" , 10 != 10); printf("\n");
	printf("%d" , 1 > 10); printf("\n");
	printf("%d" , 11 < 10); printf("\n");
	printf("%d" , 1 >= 10); printf("\n");
	printf("%d" , 11 <= 10); printf("\n");
	printf("============================");printf("\n");
	//문제1) 전부 1이나오도록 숫자를 변경해보세요.
	int a = 10;
	int b = 20;
	a = 20;
	printf("%d" , a == b); printf("\n");
	b = 1;
	printf("%d" , a != b); printf("\n");
	printf("%d" , a > b); printf("\n");
	b = 30;
	printf("%d" , a < b); printf("\n");
	a = 30;
	printf("%d" , a >= b); printf("\n");
	printf("%d" , a <= b); printf("\n");
	system("pause");
}
